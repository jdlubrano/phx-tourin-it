<div phx-hook="PasskeyNew" id={"user-#{@current_user.id}"} data-user-id={@current_user.id} data-username={@current_user.username} data-challenge={@challenge}>
  <div class="py-8"></div>
  <div class="fixed bottom-6 left-4 lg:left-auto right-4 flex flex-col items-end gap-1">
    <button type="button" class="phx-submit-loading:opacity-75 py-2 px-3 rounded-lg bg-yellow-400 hover:bg-yellow-300 text-sm font-semibold text-zinc active:text-zinc/80 w-full lg:w-auto">
      Create Passkey
    </button>
  </div>
  <div class="error empty:hidden p-2 bg-red-300 rounded-lg"></div>
</div>
